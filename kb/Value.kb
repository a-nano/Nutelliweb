
;;; Value class

(every Value has
       (num ((a Number)))
       (unit ((a Unit)))
       (text ((:seq (the num of Self) (the text of (the unit of Self))))))

(WeightValue has
	     (superclasses (Value))
	     (unit ((a WeightUnit))))
(HeightValue has
	     (superclasses (Value))
	     (unit ((a HeightUnit))))
(VolumeValue has
	     (superclasses (Value))
	     (unit ((a ValueUnit))))
(EnergyValue has
	     (superclasses (Value))
	     (unit ((a EnergyUnit))))

