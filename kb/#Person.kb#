;;; Person class

(every Person has
       (terms ("person" "human" "Human"))
       (gender ((a Gender)))
       (age ((a Number) (must-be-a Number)))
       (weight ((a WeightValue)))
       (height ((a HeightValue)))
       (|daily taken calorie| ((a EnergyValue)))
       (|daily needed calorie| ((a EnergyValue)))
       (|daily needed nutrition| ((a Nutrition)
       	       (if    ((the age of Self) < 6)
	        then  
)
(weight has
	(instance-of (Slot))
	(domain (Person Food))
	(range (WeightValue))
	(cardinality (1-to-1)))
(height has
	(instance-of (Slot))
	(domain (Person))
	(range (HeightValue))
	(cardinality (1-to-1)))
(gender has
	(instance-of (Slot))
	(domain (Person))
	(range (Gender))
	(cardinality (N-to-1)))
(*Male has
       (instance-of (Gender)))
(*Female has
	 (instance-of (Gender)))